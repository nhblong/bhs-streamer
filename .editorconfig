root=true

[*]
charset = utf-8
end_of_line = crlf lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md}]
indent_style = ignore
indent_size = ignore

[*.{js,ts}]
indent_style = space
indent_size = 4

[*.{yml,json}]
indent_style = space
indent_size = 2

[*.{html,css,scss}]
indent_style = space
indent_size = 2
